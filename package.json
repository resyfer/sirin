{
  "name": "sirin",
  "version": "1.0.5",
  "description": "CLI to share files of all kinds to anyone connected to your network",
  "main": "./lib/main.js",
  "types": "./lib/main.d.ts",
  "scripts": {
    "start": "NODE_NO_WARNINGS=1 node lib/main.js",
    "build": "tsc",
    "lint": "tsc --noEmit",
    "dev": "NODE_NO_WARNINGS=1 nodemon --exec ts-node-esm main.ts",
    "check": "pnpm build && pnpm start",
    "pre-commit": "lint-staged"
  },
  "bin": "./lib/main.js",
  "type": "module",
  "keywords": [
    "sirin",
    "cli",
    "network",
    "share",
    "file",
    "directory"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/resyfer/sirin"
  },
  "author": "Saurav Pal <palsaurav.2020@gmail.com>",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@types/mime": "^3.0.1",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.8.4",
    "@types/urlencode": "^1.1.2",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "bugs": {
    "email": "resyfer.dev@gmail.com",
    "url": "https://github.com/resyfer/sirin/issues"
  },
  "engines": {
    "node": ">=16.14.0"
  },
  "dependencies": {
    "boxen": "^7.0.0",
    "chalk": "^5.1.2",
    "clipboardy": "^3.0.0",
    "get-port": "^6.1.2",
    "mime": "^3.0.0",
    "minimist": "^1.2.7",
    "urlencode": "^1.1.0"
  },
  "lint-staged": {
    "*.ts": [
      "pnpm lint",
      "pnpm prettier --write ."
    ]
  },
  "files": [
    "lib"
  ],
  "os": [
    "linux",
    "win32"
  ]
}
